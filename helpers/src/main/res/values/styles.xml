<?xml version="1.0" encoding="utf-8"?>
<resources>
	
	<style name="SnackBar" parent="@style/Theme.AppCompat.Light"/>
	<style name="ButtonIcon"/>
		
	<style name="SnackBar.Text">
        <item name="android:paddingBottom">@dimen/padding_top_and_bottom</item>
        <item name="android:paddingLeft">@dimen/padding_left_and_right</item>
        <item name="android:paddingTop">@dimen/padding_top_and_bottom</item>
        <item name="android:paddingRight">@dimen/padding_left_and_right</item>
        <item name="android:textSize">@dimen/text_size_message</item>
        <item name="android:textColor">@color/text_color_light</item>
    </style>
	
	<style name="SnackBar.Action">
        <item name="android:paddingLeft">@dimen/padding_left_and_right_button</item>
        <item name="android:paddingRight">@dimen/padding_left_and_right_button</item>
        <item name="android:textSize">@dimen/text_size_message</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textColor">@color/button_text_dark</item>
		<item name="android:textSize">@dimen/text_size_button</item>
		<item name="android:minHeight">@dimen/min_height_button_snackbar</item>
		<item name="android:minWidth">@dimen/min_width_button_snackbar</item>
		<item name="android:foreground">?attr/selectableItemBackground</item>
		<item name="android:theme">@style/RippleTheme</item>
    </style>
	
	<style name="RippleTheme">
		<item name="colorControlHighlight">@color/highlight_white</item>
	</style>
	
	<style name="ButtonIcon.Content">
		<item name="android:minHeight">@dimen/min_height_button</item>
		<item name="android:minWidth">@dimen/min_width_button</item>
		<item name="android:paddingRight">@dimen/padding_right_button</item>
		<item name="android:paddingLeft">@dimen/padding_left_button</item>
	</style>
	
	<style name="ButtonIcon.Icon">
		<item name="android:layout_marginRight">@dimen/margin_icon</item>
	</style>
	
	<style name="ButtonIcon.Text">
		<item name="android:textSize">@dimen/text_size_button</item>
		<item name="android:textColor">@color/black</item>
		<item name="android:textAllCaps">true</item>
	</style>
	
</resources>
